<Application x:Class="osu_tournament_manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:osu_tournament_manager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Pink.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="Exo2">pack://application:,,,/Fonts/Exo 2/#Exo 2</FontFamily>
            <FontFamily x:Key="Venera100">pack://application:,,,/Fonts/Venera/#Venera 100</FontFamily>
            <FontFamily x:Key="Venera300">pack://application:,,,/Fonts/Venera/#Venera 300</FontFamily>
            <FontFamily x:Key="Venera500">pack://application:,,,/Fonts/Venera/#Venera 500</FontFamily>
            <FontFamily x:Key="Venera700">pack://application:,,,/Fonts/Venera/#Venera 700</FontFamily>
            <FontFamily x:Key="Venera900">pack://application:,,,/Fonts/Venera/#Venera 900</FontFamily>            
        </ResourceDictionary>
    </Application.Resources>
</Application>
