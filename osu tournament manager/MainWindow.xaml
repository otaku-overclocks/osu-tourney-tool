<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:osu_tournament_manager"
        xmlns:UserControls="clr-namespace:osu_tournament_manager.UI.UserControls" x:Class="osu_tournament_manager.MainWindow"
        mc:Ignorable="d"
        TextElement.FontFamily="{StaticResource Exo2}"
        TextElement.FontSize="14"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Padding="0" Margin="10,10,10,0" VerticalAlignment="Top" BorderThickness="1">
            <Border CornerRadius="3" d:IsLocked="True">
                <Grid>
                    <Image Source="Images/button overlay.png" Stretch="UniformToFill"/>
                    <Label Content="Button" Foreground="{Binding Foreground, ElementName=button}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Button>
        <Label x:Name="label" Content="Score:" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="40,000,000" TextElement.FontFamily="{StaticResource Venera500}" HorizontalAlignment="Right" Margin="0,47,10,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
